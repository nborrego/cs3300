<p id="notice"><%= notice %></p>

<h1>Projects</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <div class="col-md-4">
        <div class="card mb-4 box-shadow">
          <p class="card-title"><%= project.title %></p>
          <div class="card-body">
            <p class="card-text"><%= project.description %></p>
            <div class="d-flex justify-content-between align-items-center">
              <div class="list-group">
                <li class="list-group-item"><%= link_to 'Show', project %></li>
                <li class="list-group-item"><%= link_to 'Edit', edit_project_path(project) %></li>
                <li class="list-group-item"><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } %></li>
              </div>
              <small class="text-muted">9 mins</small>
            </div>
          </div>
        </div>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Project', new_project_path %>
