<p id="notice"><%= notice %></p>

<h1>Projects</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <div class="col-md-4">
        <div class="card mb-4 box-shadow">
          <p class="card-title">project.title</p>
          <div class="card-body">
            <p class="card-text">project.description</p>
            <div class="d-flex justify-content-between align-items-center">
              <div class="list-group">
              <a href="https://radiant-sea-45660.herokuapp.com/projects/"project"" class="list-group-item list-group-item-action">Show</a>
              <a href="https://radiant-sea-45660.herokuapp.com/projects/"project"/edit" class="list-group-item list-group-item-action"Edit</a>
              <a data-confirm="Are you sure?" data-method="destroy" href="https://radiant-sea-45660.herokuapp.com/projects/"project"/destroy" class="list-group-item list-group-item-action">Destroy</a>
            </div>
              <small class="text-muted">9 mins</small>
            </div>
          </div>
        </div>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Project', new_project_path %>
